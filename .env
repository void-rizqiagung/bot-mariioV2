# =============================================================================
# KONFIGURASI SERVER
# =============================================================================
PORT=5000
CORS_ORIGIN=*
HELMET_ENABLED=true
SESSION_SECRET=[KUNCI_RAHASIA_SESI_ANDA]

# =============================================================================
# KONFIGURASI FITUR BOT
# =============================================================================
# Aktifkan/nonaktifkan fitur (true/false)
ENABLE_AI=true
ENABLE_MEDIA_DOWNLOAD=true
ENABLE_VIEW_ONCE_FORWARD=true
ENABLE_AUTO_VIEW_STATUS=true
ENABLE_TYPING_INDICATORS=false

# =============================================================================
# KONFIGURASI RATE LIMITING
# =============================================================================
# Batasan jumlah pesan per menit
RATE_LIMIT_MESSAGES=unlimited
RATE_LIMIT_COMMANDS=15
RATE_LIMIT_MEDIA=10
RATE_LIMIT_AI=10

# =============================================================================
# KONFIGURASI MEDIA
# =============================================================================
# Ukuran file maksimum dalam MB
MAX_FILE_SIZE_MB=75
TEMP_DIR=./temp
YOUTUBE_QUALITY=highest
TIKTOK_NO_WATERMARK=false
IMAGE_COMPRESSION_QUALITY=80
VIDEO_COMPRESSION_ENABLED=false
THUMBNAIL_SIZE=200

# =============================================================================
# KONFIGURASI LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
ENABLE_PROFILING=false
ENABLE_METRICS_ENDPOINT=false

# =============================================================================
# KONFIGURASI CONTENT FILTERING
# =============================================================================
CONTENT_FILTERING_ENABLED=false
PROFANITY_FILTER=false
SPAM_DETECTION=false
MAX_MESSAGE_LENGTH=4096
MAX_CAPTION_LENGTH=1024
MAX_FILENAME_LENGTH=100

# =============================================================================
# KONFIGURASI PERFORMA
# =============================================================================
MAX_CONCURRENT_DOWNLOADS=3
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
MEMORY_USAGE_WARNING_THRESHOLD=500

# =============================================================================
# KONFIGURASI KEAMANAN
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ALLOW_CUSTOM_COMMANDS=false
CUSTOM_COMMAND_PREFIX=/

# =============================================================================
# KONFIGURASI MAINTENANCE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot sedang dalam maintenance. Silakan coba lagi nanti.
CLEANUP_TEMP_FILES_INTERVAL=3600
LOG_ROTATION_INTERVAL=86400

# =============================================================================
# KONFIGURASI EXTERNAL SERVICES (OPSIONAL)
# =============================================================================
DISCORD_WEBHOOK=
SLACK_WEBHOOK=
TELEGRAM_BOT_TOKEN=
WEBHOOK_URL=
SENTRY_DSN=

# =============================================================================
# KONFIGURASI ANALYTICS & MONITORING (OPSIONAL)
# =============================================================================
ANALYTICS_ENABLED=false
TRACK_COMMAND_USAGE=false
TRACK_AI_INTERACTIONS=false
TRACK_MEDIA_DOWNLOADS=false
METRICS_COLLECTION_INTERVAL=300

# =============================================================================
# KONFIGURASI LOKALISASI
# =============================================================================
TIMEZONE=Asia/Jakarta

# =============================================================================
# PETUNJUK DEPLOYMENT
# =============================================================================
# 1. Salin semua variabel di atas ke environment variables platform hosting Anda
# 2. Ganti semua nilai yang diberi tanda [ANDA_HARUS_ISI] dengan nilai sebenarnya
# 3. Pastikan database PostgreSQL sudah siap dan URL database sudah benar
# 4. Dapatkan API key Gemini dari https://makersuite.google.com/app/apikey
# 5. Set start command: npm start atau node server.js
# 6. Deploy dan pastikan bot dapat terhubung ke WhatsApp

# =============================================================================
# PLATFORM DEPLOYMENT YANG DIREKOMENDASIKAN:
# =============================================================================
# 1. Railway (https://railway.app) - Gratis dengan PostgreSQL
# 2. Render (https://render.com) - Gratis dengan database eksternal
