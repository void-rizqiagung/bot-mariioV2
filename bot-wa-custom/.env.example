# WhatsApp Bot Configuration
# Copy this file to .env and fill in your actual values

# Phone number for pairing (without + sign, include country code)
# Example: 6281234567890 for Indonesian number +62 812-3456-7890
PHONE_NUMBER=

# Bot owner WhatsApp ID for view once message forwarding
# Format: phonenumber@s.whatsapp.net
# Example: 6281234567890@s.whatsapp.net
BOT_OWNER_JID=

# Google Gemini AI API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Alternative API key field (fallback)
API_KEY=

# PostgreSQL Database Configuration
# These should be provided by your hosting environment
DATABASE_URL=postgresql://username:password@host:port/database
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGHOST=localhost
PGPORT=5432
PGDATABASE=whatsapp_bot

# Server
PORT=5000

# Testing
ALLOW_SELF_TESTING=false

# Logging Configuration
LOG_LEVEL=info

# Session Secret for Express
SESSION_SECRET=your_very_secure_random_session_secret_here

# Optional: Admin Phone Number (for special privileges)
ADMIN_PHONE=6281234567890

# Rate Limiting Configuration (optional)
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_COMMANDS=5
RATE_LIMIT_MEDIA=3
RATE_LIMIT_AI=8

# Media Configuration
MAX_FILE_SIZE_MB=50
TEMP_DIR=./temp

# Bot Features Toggle (optional)
ENABLE_AI=true
ENABLE_MEDIA_DOWNLOAD=true
ENABLE_VIEW_ONCE_FORWARD=true
ENABLE_AUTO_VIEW_STATUS=true

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./session
PRIVATE_CHAT_ONLY=true
SILENT_IN_GROUPS=true

# Database Pool Configuration (optional)
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=20000
DB_POOL_CONNECT_TIMEOUT=60000

# Security Configuration
CORS_ORIGIN=*
HELMET_ENABLED=true

# Development Configuration (for development only)
DEBUG_MODE=false
MOCK_DATA=false

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
MEMORY_USAGE_WARNING_THRESHOLD=500

# External Services Configuration
YOUTUBE_QUALITY=highest
TIKTOK_NO_WATERMARK=true

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Notification Configuration
WEBHOOK_URL=
NOTIFICATION_ENABLED=false

# Analytics Configuration
ANALYTICS_ENABLED=true
TRACK_COMMAND_USAGE=true
TRACK_AI_INTERACTIONS=true
TRACK_MEDIA_DOWNLOADS=true

# Error Reporting
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=

# Feature Flags
EXPERIMENTAL_FEATURES=false
BETA_COMMANDS=false

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Internationalization
DEFAULT_LANGUAGE=id
TIMEZONE=Asia/Jakarta

# Bot Personality (for AI responses)
BOT_NAME=WhatsApp AI Bot
BOT_PERSONALITY=helpful,friendly,professional
BOT_LANGUAGE_STYLE=casual

# Content Filtering
CONTENT_FILTERING_ENABLED=true
PROFANITY_FILTER=true
SPAM_DETECTION=true

# Media Processing
IMAGE_COMPRESSION_QUALITY=80
VIDEO_COMPRESSION_ENABLED=false
THUMBNAIL_SIZE=200

# Advanced Features
ENABLE_COMMAND_SUGGESTIONS=true
ENABLE_TYPING_INDICATORS=true
ENABLE_MESSAGE_REACTIONS=true
ENABLE_MESSAGE_EDITING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot sedang dalam maintenance. Silakan coba lagi nanti.

# Load Balancing (for multiple instances)
INSTANCE_ID=1
CLUSTER_MODE=false

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Custom Commands Configuration
ALLOW_CUSTOM_COMMANDS=false
CUSTOM_COMMAND_PREFIX=!

# Integration Keys (optional)
DISCORD_WEBHOOK=
SLACK_WEBHOOK=
TELEGRAM_BOT_TOKEN=

# Scheduled Tasks
CLEANUP_TEMP_FILES_INTERVAL=3600
LOG_ROTATION_INTERVAL=86400
METRICS_COLLECTION_INTERVAL=300

# Performance Tuning
MAX_CONCURRENT_DOWNLOADS=3
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Feature Limits
MAX_MESSAGE_LENGTH=4096
MAX_CAPTION_LENGTH=1024
MAX_FILENAME_LENGTH=100

# Development Tools
ENABLE_DEBUG_LOGS=false
ENABLE_PROFILING=false
ENABLE_METRICS_ENDPOINT=true

# Example Values (DO NOT USE IN PRODUCTION)
# PHONE_NUMBER=6281234567890
# BOT_OWNER_JID=6281234567890@s.whatsapp.net
# GEMINI_API_KEY=AIzaSyABC123def456GHI789jkl012MNO345pqr678
# SESSION_SECRET=super_secret_random_string_change_this_in_production_2024